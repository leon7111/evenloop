#include<iostream>
int forLoop();
int whileLoop();
int dowhileLoop();
using namespace std;
int main()
{
	int c;
	cout<<"Enter 1 for forloop 2 for while loop 3 for do while loop = ";
	cin>>c;
	switch (c){
		case 1:
			forLoop();
			break;
		case 2:
			whileLoop();
			break;
		case 3:
			dowhileLoop();
			break;
		
	}
	
	
	
	
}
int forLoop()
{
	cout<<"the even number from for loop \n";
	
	for(int i; i<=100; i++){
		if(i % 2 == 0){
			cout<<i<<"\t";
		}
	}
}
int whileLoop(){
	cout<<"\nthe even number from while loop \n";
	int a=0;
	while(a<=100){
		if(a % 2 == 0){
			cout<<a<<"\t";
		}
		a++;
	}
	
}
int dowhileLoop(){
	cout<<"\nthe even number from do while loop \n";
	int b=0;
	do{
		if(b % 2 == 0){
			cout<<b<<"\t";
		}
		b++;
	}while(b<=100);
}
